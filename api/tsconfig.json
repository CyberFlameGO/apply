{
    "include":         [
        "./**/*.ts"
    ],
    "compilerOptions": {
        "target":                       "es2017",
        "module":                       "commonjs",
        "lib":                          [
            "es2017",
            "es2016",
            "es2015",
            "dom"
        ],
        "noUnusedLocals":               true,
        "noUnusedParameters":           true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop":              true
    }
}
